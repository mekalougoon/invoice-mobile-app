<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/invoice_card_total"
            android:layout_width="90dp"
            android:layout_height="26dp"
            android:text="Total"
            android:textColor="#000000"
            app:layout_constraintBaseline_toBaselineOf="@+id/invoice_card_buyer_name"
            app:layout_constraintStart_toEndOf="@+id/invoice_card_buyer_name" />

        <TextView
            android:id="@+id/invoice_card_buyer_name"
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:layout_marginStart="191dp"
            android:layout_marginTop="4dp"
            android:text="Buyer"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/invoice_card_id"
            android:layout_width="67dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="1dp"
            android:text="ID"
            android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/invoice_card_issuer_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/invoice_card_issuer_name"
            android:layout_width="94dp"
            android:layout_height="24dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="1dp"
            android:text="Issuer"
            android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/invoice_card_buyer_name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="34dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>